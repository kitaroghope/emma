<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="Emma Store">
    <meta property="og:description" content="Best online store.">
    <meta property="og:image" content="https://emmastore.onrender.com/icon.jpg">
    <meta property="og:url" content="https://emmastore.onrender.com">
    <title>Welcome to Emma Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://emmastore.onrender.com/style.css">
</head>
<body>
    <div class="container border border-dark">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                  <!-- Logo on the far left -->
                  <a class="navbar-brand" href="/">
                    <img src="https://emmastore.onrender.com/icon.jpg" class="rounded" alt="Logo" width="50" height="auto">
                  </a>
            
                  <!-- Toggle button for small screens -->
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
            
                  <!-- Links on the far right -->
                  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                      </li>
                      <% if (user.length == 0) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">login</a>
                        </li>
                      <% } else {%>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hi, <%= user.lname %></a>
                            <a class="nav-link" id="nqty" href="/cart">Cart: <%= user.qty %></a>
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                      <% } %>
                    </ul>
                  </div>
                </div>
              </nav>
        </div>
        <br>
        <div class="row" id="wel">
          <h1>Emma Store</h1>
        </div>
        <br>
        <div class="row middle">
          <div class="col-10">
            <div class="row">
              <% if (typeof products !== 'undefined') { %>
                <% for(i = 0; i < products.length; i++ ) { %>
                  <div class="col-md-4">
                    <div class="card">
                      <div class="card-header">
                        <%= products[i].product %>
                      </div>
                      <img style="height: 100px;width: 100px;" src="https://lugandahymnalnew.infinityfreeapp.com/uploads/<%= products[i].img %>" alt="">
                      <div class="card-body">
                        <h5 class="card-title">Details</h5>
                        <p class="card-text"><%= products[i].details %></p>
                        <a href="/product/<%= i %>" class="btn btn-primary">View</a>
                        <button onclick="postRoute('addToCart/<%= user._id %>/<%= products[i]._id %>')" class="btn btn-primary">Add To Cart</button>
                      </div>
                    </div>
                  </div>                
                <% } %>
              <% } %>
            </div>
          </div>
         
          <div class="col-2" style="position: static; top: 20px;">
            <img src="https://emmastore.onrender.com/icon.jpg" alt="">
            <p>adverts</p>
            <img src="https://emmastore.onrender.com/huddypro.jpg" alt="">
            <p>adverts</p>
            <img src="https://emmastore.onrender.com/huddypro.jpg" alt="">
            <p>adverts</p>
            <img src="https://emmastore.onrender.com/huddypro.jpg" alt="">
            <p>adverts</p>
            <img src="https://emmastore.onrender.com/huddypro.jpg" alt="">
          </div>
        </div>
        <button class="btn btn-danger" onclick="postD('/op')">kita</button>
        <br>
        <div class="row bg-dark text-light text-align-center">
          <br>
          <p style="text-align: center;">Best online market ever.</p>
          <p style="text-align: center;">copyright &copy;Emma 2023</p>
        </div>
    </div>
    <div id="cAlert"></div>
    <% if (typeof message !== 'undefined') { %>
        <div class="over">
          <div class="msg">
            <div class="card">
              <div class="card-header">
                Alert
              </div>
              <div class="card-body">
                <h5 class="card-title">Message</h5>
                <p class="card-text"><%= message %></p>
                <% if (typeof files !== 'undefined') { %>
                 <ul>
                  <% files.forEach(file => { %>
                   <li><%= file %></li>
                  <% }) %>
                 </ul>
                <% } %>
                <% if (typeof rfiles !== 'undefined') { %>
                  <h5>Rejected files</h5>
                 <ul class="text-danger">
                  <% rfiles.forEach(file => { %>
                   <li><%= file %></li>
                  <% }) %>
                 </ul>
                <% } %>
              </div>
              <button style="margin: 0 auto;" class="btn btn-danger" onclick="btnClose()">Ok</button>
              <br>
            </div>
          </div>
        </div>
        <% } %>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="alert.js" defer></script>
    <script>
      function btnClose(){
        $('.over').css('display','none');
      }
    </script>
</body>
</html>