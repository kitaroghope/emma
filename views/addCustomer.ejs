<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Huddypro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <style>
      body{
        background: hsl(212, 14%, 73%);
        background-image: url(bg1.png);
      }
      #wel{
        min-height: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
      }
      #wel h1{
        text-shadow: 5px 0  5px white;
      }
      .drop-area {
        border: 2px dashed #ccc;
        padding: 20px;
        height: 400px;
        text-align: center;
        cursor: pointer;
      }
      .drop-area form{
        text-align: left;
      }

      .drop-area p {
        margin: 0;
      }

      #fileList {
        margin-top: 20px;
      }

      .file-item {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
      }
      .activ{
        border: 2px dashed #1c053f;
      }
      .over{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.192);
      }
      .msg{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        padding-bottom: 10px;
        max-height: 350px;
      }
      .f{
        color: white;
        padding: 5px;
        background: rgba(0, 0, 0, 0.705);
      }
    </style>
</head>
<body>
    <div class="container border border-dark">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                  <!-- Logo on the far left -->
                  <a class="navbar-brand" href="/">
                    <img src="http://localhost:3500/icon.jpg" class="rounded" alt="Logo" width="50" height="auto">
                  </a>
            
                  <!-- Toggle button for small screens -->
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
            
                  <!-- Links on the far right -->
                  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                      </li>
                      <% if (user == "") { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">login</a>
                        </li>
                      <% } else {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/account">Hi, <%= user.lname %></a>
                            <a class="nav-link" href="/account">Cart: <%= user.qty %></a>
                        </li>
                      <% } %>
                    </ul>
                  </div>
                </div>
              </nav>
        </div>
        <div class="row p-2 f" id="register">

            <h2>Register</h2><br>
            <p class="btn btn-light" onclick="openl(this, '#login')">I have an account, <a href="#">Login</a></p>
            <% if (typeof fData !== 'undefined') { %>
            <form action="" method="post" class="f">
                <div class="row">
                    <div class="col">
                      <input type="text" value="<%= fData.FName %>" name="FName" class="form-control" placeholder="First name" aria-label="First name" required>
                    </div>
                    <div class="col">
                      <input type="text" value="<%= fData.LName %>" name="LName" class="form-control" placeholder="Last name" aria-label="Last name" required>
                    </div>
                  </div>
                <div class="row">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" value="<%= fData.email %>" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                      </div>
                      <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" value="<%= fData.password %>" class="form-control" id="password" onchange="checkpass()" name="password" required>
                      </div>
                      <div class="mb-3">
                        <label for="ppassword" class="form-label">Confirm Password</label>
                        <input type="password"  class="form-control" id="ppassword" onchange="checkpass()" required>
                        <p id="p"></p>
                      </div>
                        <input type="submit" value="Register" class="btn btn-primary" id="btn-s" disabled>
                </div>
            </form>
            <% } else { %>
              <form action="/addCustomer" method="post" class="f">
                  <div class="row">
                      <div class="col">
                        <input type="text" name="fname" class="form-control" placeholder="First name" aria-label="First name" required>
                      </div>
                      <div class="col">
                        <input type="text" name="lname" class="form-control" placeholder="Last name" aria-label="Last name" required>
                      </div>
                    </div>
                  <div class="row">
                        <div class="mb-3">
                          <label for="number" class="form-label">Email address</label>
                          <input type="email" class="form-control" id="email" name="number" aria-describedby="emailHelp" required>
                          <div id="emailHelp" class="form-text">We'll never share your number with anyone.</div>
                        </div>
                        <div class="mb-3">
                          <label for="password" class="form-label">password</label>
                          <input type="password" class="form-control" id="password" onchange="checkpass()" name="password" required>
                        </div>
                        <input type="number" style="display: none;">
                        <div class="mb-3">
                          <label for="ppassword" class="form-label">Confirm Password</label>
                          <input type="password"  class="form-control" id="ppassword" onchange="checkpass()" required>
                          <p id="p"></p>
                        </div>
                        <h2>Address</h2>
                        <div class="mb-3">
                          <label for="country" class="form-label">Country</label>
                          <input type="text" class="form-control" id="country" name="country" aria-describedby="emailHelp" required>
                        </div>
                        <div class="mb-3">
                          <label for="city" class="form-label">City</label>
                          <input type="text" class="form-control" id="details" name="details" aria-describedby="emailHelp" required>
                        </div>
                        <div class="mb-3">
                          <label for="address" class="form-label">Address</label>
                          <textarea class="form-control" name="address" id="description" cols="30" rows="10" required></textarea>
                        </div>
                          <input type="submit" onclick="customPopUp('loading...')" value="Register" class="btn btn-primary" id="btn-s" disabled>
                          
                  </div>
              </form>
            <% } %>
          
        </div>
        <div class="row p-2 f" style="max-width: 400px; margin: 5px auto;" id="login">
          <h2>Login</h2>
            <form action="/login" method="post" class="f">
                <div class="row mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label">Number</label>
                  <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" name="number" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                  <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3" name="password" required>
                  </div>
                </div>
                <button type="submit" onclick="customPopUp('loading...')" class="btn btn-primary">Sign in</button>
            </form>
            <button class="btn btn-light" onclick="openl(this, '#register')">I don't have an account</button>
        </div>
        <div class="row bg-dark text-light text-align-center">
          <br>
          <p style="text-align: center;">Best online store.</p>
          <p style="text-align: center;">copyright &copy;Emma store 2023</p>
        </div>
    </div>
    <% if (typeof message !== 'undefined') { %>
        <div class="over">
          <div class="msg">
            <div class="card">
              <div class="card-header">
                Alert
              </div>
              <div class="card-body">
                <h5 class="card-title">Message</h5>
                <p class="card-text"><%= message %></p>
                <% if (typeof files !== 'undefined') { %>
                 <ul>
                  <% files.forEach(file => { %>
                   <li><%= file %></li>
                  <% }) %>
                 </ul>
                <% } %>
                <% if (typeof rfiles !== 'undefined') { %>
                  <h5>Rejected files</h5>
                 <ul class="text-danger">
                  <% rfiles.forEach(file => { %>
                   <li><%= file %></li>
                  <% }) %>
                 </ul>
                <% } %>
              </div>
              <button style="margin: 0 auto;" class="btn btn-danger" onclick="btnClose()">Close</button>
              <br>
            </div>
          </div>
        </div>
        <% } %>
        <div id="cAlert"></div>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="http://localhost:3500/alert.js" defer></script>
    <script>
        
        function btnClose(){
          $('.over').css('display','none');
        }
    </script>
</body>
</html>